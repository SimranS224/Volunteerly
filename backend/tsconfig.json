{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "lib": ["es2015"],
      "noImplicitAny": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "strictNullChecks": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
